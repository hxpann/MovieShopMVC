<!--here this model represent the list of model card-->
@model List<ApplicationCore.Models.MovieCardModel>

@{
    ViewData["Title"] = "Home Page";
    //also can implement own layout like Layout = null;which means no layout

}

<div class="rounded">
    <div class="container-fluid">
        <div class="row">
            <!--Model represent the model data collection sent to view
                dynamic type does not know what until run-->
            @foreach (var movieCard in Model)
            {
                <div class="col-6 col-lg-3 col-sm-4 col-xl-2">
                   <partial name="_MovieCardPartial" model="movieCard" />
                </div>
                
            }
        </div>
    </div>
</div>