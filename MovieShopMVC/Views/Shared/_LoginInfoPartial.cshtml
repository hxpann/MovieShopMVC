@using MovieShopMVC.Services
@*
if user ise authenticated 
show First Name +Last Name
dropdown for links
1. Movies (purchased movies ) -> user/purchases
2. Favorites -> user/favorites
3. Account info -> user/edit
4. Logout -> logout and redirect to login page
else
show links
Register -> account/register
Login  -> account/login

@User.Identity.IsAuthenticated*@

@inject ICurrentUser currentUser

@if (currentUser.IsAuthenticated)
{
    <div class="text-end">
        <ul class="nav">
            <li class="nav-item dropdown text-capitalize text-white">
                <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    @currentUser.FullName
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li><a class="dropdown-item" asp-controller="User" asp-action="Purchases">Library</a></li>
                    <li><a class="dropdown-item" asp-controller="User" asp-action="Favorites">Favorites</a></li>
                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Account</a></li>
                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                </ul>
            </li>
        </ul>
    </div>
}
else
{
    <div class="text-end text-white">
        <a class="btn btn-outline-light me-2" asp-controller="Account" asp-action="Login">
            Log in
        </a>
        <a class="btn btn-outline-light me-2" asp-controller="Account" asp-action="Register">
            Register
        </a>
    </div>
}


